<div class="form-page">
    <h1><%= title %></h1>

    <!-- Flash Messages -->
    <%- messages() %>

    <!-- Server-side validation errors -->
    <% if (errors) { %>
        <ul class="notice">
            <% errors.forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>
    <!-- Add Classification Form -->
    <form action="/inv/add-classification" method="post" class="add-classification-form">
        <label for="classification_name">Classification Name:</label>
        <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]+$"
            title="Only letters and numbers allowed, no spaces or special characters"
            value="<%= classification_name || '' %>">
    
        <button type="submit">Add Classification</button>
                    

    </form>
</div>


    