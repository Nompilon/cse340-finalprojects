<div class="form-page">
    <h1><%= title %></h1>

    <!-- Flash messages -->
    <%- messages() %>
    
    <!-- Server-side validation errors -->
    <% if (errors && errors.length> 0) { %>
        <ul class="notice">
            <% errors.forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

    <!-- Confirmation message -->
    <p class="notice">
        Confirm Deletion - This action is permanent and cannot be undone.
    </p>
    
   <form action="/inv/delete" method="POST" class="vehicle-form">
        
        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>" readonly>
        <span id="inv_makeError" class="error"></span>
        
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>" readonly>
        <span id="inv_modelError" class="error"></span>
        
        <label for="inv_year">Year</label>
        <input type="number" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>" readonly>
        <span id="inv_yearError" class="error"></span>
        
        <label for="inv_description">Description</label>
        <textarea id="inv_description" name="inv_description" readonly><%= locals.inv_description %></textarea>

        <span id="inv_descriptionError" class="error"></span>
        
        <label for="inv_image">Image URL</label>
        <input type="text" id="inv_image" name="inv_image" required value="<%= locals.inv_image %>" readonly>
        <span id="inv_imageError" class="error"></span>
        
        <label for="inv_thumbnail">Thumbnail URL</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>" readonly>
        <span id="inv_thumbnailError" class="error"></span>
        
        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>" readonly>
        <span id="inv_priceError" class="error"></span>
        
        <label for="inv_miles">Miles</label>
        <input type="number" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles %>" readonly>
        <span id="inv_milesError" class="error"></span>
        
        <label for="inv_color">Color</label>
        <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>" readonly>
        <span id="inv_colorError" class="error"></span>
        <label for="classificationList">Classification</label>
        
        <select id="classificationList" name="classification_id">
            <select name="classification_id" id="classificationList" required>
                <option value=''>Choose a Classification</option>
                <option value="1">Custom</option>
                <option value="5">Sedan</option>
                <option value="2">Sport</option>
                <option value="3">SUV</option>
                <option value="4">Truck</option>
                <option value="6">Vintage</option>
            </select>
        </select>

        <button type="submit">Delete Vehicle</button>
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>
    </form>
</div>


